<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
      android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:src="@mipmap/icon_wutu"
                android:id="@+id/iv_tupian"
                android:layout_width="70dip"
                android:layout_height="70dip" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"

                android:text="****"
                android:textColor="@color/subtitle_color"
                android:textSize="@dimen/txt_size_14" />
            <RelativeLayout
               android:layout_marginTop="10dip"
                style="@style/leba_bg_bottom_layout"
                android:id="@+id/title_manageinfo"
                >


                <Button
                    android:gravity="center"
                    android:textSize="@dimen/txt_size_14"
                    android:layout_alignParentRight="true"
                    android:id="@+id/btn_bianji"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="140dp"
                    android:textColor="#62A9E7"
                    android:background="@drawable/circle_corner_button_selector"
                    android:text="修改" />

                <Button
                    android:gravity="center"
                    android:textSize="@dimen/txt_size_14"
                    android:layout_alignParentRight="true"
                    android:id="@+id/btn_del"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="70dp"
                    android:textColor="#62A9E7"
                    android:background="@drawable/circle_corner_button_selector"
                    android:text="删除" />

                <Button
                    android:gravity="center"
                    android:textSize="@dimen/txt_size_14"
                    android:layout_alignParentRight="true"
                    android:id="@+id/btn_yulan"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#62A9E7"
                    android:background="@drawable/circle_corner_button_selector"
                    android:text="预览" />
            </RelativeLayout>


            </LinearLayout>

        </LinearLayout>






    </LinearLayout>




</LinearLayout>