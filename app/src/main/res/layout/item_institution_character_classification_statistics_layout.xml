<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_1px"
        android:background="@color/separator_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_institution_character"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:text=""
            android:textAppearance="@style/TextAppearanceGray" />

        <View
            android:layout_width="@dimen/line_1px"
            android:layout_height="match_parent"
            android:background="@color/separator_color" />

        <TextView
            android:id="@+id/tv_institution_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:text=""
            android:textAppearance="@style/TextAppearanceGray" />

        <View
            android:layout_width="@dimen/line_1px"
            android:layout_height="match_parent"
            android:background="@color/separator_color" />

        <TextView
            android:id="@+id/tv_bed_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:text=""
            android:textAppearance="@style/TextAppearanceGray" />

        <View
            android:layout_width="@dimen/line_1px"
            android:layout_height="match_parent"
            android:background="@color/separator_color" />

        <TextView
            android:id="@+id/tv_percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:text=""
            android:textAppearance="@style/TextAppearanceGray" />

    </LinearLayout>
</LinearLayout>