<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item2_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


        <LinearLayout
            android:background="#fff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >



    <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioGroup
        android:id="@+id/rg_abnormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioButton
            android:id="@+id/rb_abnormal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正常" />

        <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioButton
            android:id="@+id/rb_abnormal2"
            android:layout_marginLeft="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="异常" />
      </com.mixiaoxiao.smoothcompoundbutton.SmoothRadioGroup>

      <EditText
                android:visibility="gone"
                android:hint="请输入异常内容"
                android:id="@+id/et_abnormalinfo"
                android:textColor="#818181"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="12dip"
                android:layout_weight="6"
                android:background="@drawable/gray_border_gray_background"
                />


        </LinearLayout>


</LinearLayout>