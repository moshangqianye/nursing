<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_form_msg_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="2012-12-12 12:12:12"
        android:textColor="#bebebe"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/leftlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/msgtou"
                android:layout_width="49dp"
                android:layout_height="49dp"
                 />

            <TextView
                android:id="@+id/msgname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="xxxx"
                android:maxLines="1"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/id_from_msg_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="你好"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/id_from_msg_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="你好"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/msgtou2"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:src="@mipmap/person" />

            <TextView
                android:id="@+id/msgname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="xxxx"
                android:maxWidth="70dp"
                android:maxLines="1"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>