<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/leba_bg_layout"
    >
    <LinearLayout
        style="@style/leba_bg_top_layout"

        android:orientation="vertical"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        >

        <RelativeLayout
            style="@style/ll_bg_mid_layout"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="5dip"
                android:layout_centerVertical="true"
                android:id="@+id/iv_bitian"
                android:src="@drawable/bitian"
                android:layout_width="8dip"
                android:layout_height="8dip" />

            <TextView
                android:layout_toRightOf="@+id/iv_bitian"
                android:layout_centerVertical="true"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"

                android:text="****"
                android:textColor="@color/title_color"
                android:textSize="@dimen/txt_size_16" />
            <ImageView
                android:layout_marginRight="12dip"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:id="@+id/iv_photo"
                android:src="@mipmap/take_photo_blue"
                android:layout_width="30dip"
                android:layout_height="30dip" />

        </RelativeLayout>

        <View
            android:layout_marginTop="5dip"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@drawable/leba_shape_line" />

       <!-- <android.support.v4.widget.NestedScrollView
            android:id="@+id/sv_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipChildren="true">-->


        <RelativeLayout
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ListView
                android:divider="@null"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:id="@+id/ls_shenqingxiang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>


        </RelativeLayout>




       <!-- </android.support.v4.widget.NestedScrollView>
-->
    </LinearLayout>



</LinearLayout>