<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" >

    <LinearLayout style="@style/leba_bg_layout" >

        <LinearLayout
            android:id="@+id/ll_nurse"
            style="@style/leba_bg_all_layout"
            android:orientation="vertical" >
            <LinearLayout
                android:id="@+id/ll_nursing_yongyao"
                  style="@style/ll_bg_mid_layout"
                android:orientation="horizontal" >
                <TextView
                    android:layout_weight="4"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.0dip"
                    android:text="姓名"
                    android:textColor="#191616"
                    android:textSize="@dimen/txt_size_14" />
                <TextView
                    android:layout_marginRight="12dp"
                    android:gravity="right"
                    android:id="@+id/tv_execu_name"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_weight="6"
                    android:text="张某某"
                    android:textColor="#818181"
                    android:textSize="@dimen/txt_size_14" />
            </LinearLayout>
            <LinearLayout
                 android:id="@+id/ll_nursing_fanshen"
                style="@style/ll_bg_mid_layout"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.0dip"
                    android:layout_weight="4"
                    android:text="签约医生"
                    android:textColor="#191616"
                    android:textSize="@dimen/txt_size_14" />

                <TextView
                    android:layout_marginRight="12dp"
                    android:gravity="right"
                    android:textColor="#818181"
                    android:id="@+id/tv_execu_doctor"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_weight="6"
                    android:text="张某某"
                    android:textSize="@dimen/txt_size_14"


                   />
            </LinearLayout>

            <LinearLayout
                  android:id="@+id/ll_nursing_richang"
                 style="@style/ll_bg_mid_layout"
                android:orientation="horizontal" >



                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_marginLeft="12.0dip"
                    android:text="服务项目"
                    android:textColor="#191616"
                    android:textSize="@dimen/txt_size_14" />

                <TextView
                    android:layout_marginRight="12dp"
                    android:gravity="right"
                    android:textColor="#818181"
                    android:id="@+id/tv_execu_project"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_weight="6"
                    android:text="肝功能"

                    android:textSize="@dimen/txt_size_14" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout style="@style/leba_bg_layout" >

        <LinearLayout
            android:id="@+id/ll_content"
            style="@style/leba_bg_all_layout"
            android:orientation="vertical" >
            <LinearLayout
                style="@style/ll_bg_mid_layout"
                android:orientation="horizontal" >
                <TextView

                    android:layout_weight="2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.0dip"
                    android:text="服务时间"
                    android:textColor="#191616"
                    android:textSize="@dimen/txt_size_14" />
               <!-- <TextView
                    android:id="@+id/tv_execu_serverdate"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_weight="6"
                    android:text=""
                    android:textSize="16.0dip" />-->

                <EditText
                    android:focusable="false"
                    android:textColor="#818181"
                    android:textSize="@dimen/txt_size_14"
                    android:layout_marginRight="12dip"
                    android:id="@+id/et_execu_serverdate"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dip"
                    android:layout_weight="6"
                    android:background="@drawable/gray_border_gray_background"
                     />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_nursing_address"
                style="@style/ll_bg_mid_layout"
                android:orientation="horizontal" >

                <TextView
                    android:layout_marginTop="5dip"
                    android:layout_gravity="top"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.0dip"
                    android:layout_weight="2"
                    android:text="服务地点"
                    android:textColor="#191616"
                    android:textSize="@dimen/txt_size_14" />



                <LinearLayout
                    android:background="#fff"
                    android:orientation="vertical"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_weight="6">

                <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioGroup
                    android:id="@+id/rg_adress1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioButton
                        android:id="@+id/rb_adress1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#818181"
                        android:textSize="@dimen/txt_size_14"

                        android:text="上门" />

                    <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioButton
                        android:id="@+id/rb_adress2"
                        android:layout_marginLeft="8dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_size_14"
                        android:textColor="#818181"
                        android:text="村室" />

                    <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioButton
                        android:id="@+id/rb_adress3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dip"
                        android:textColor="#818181"
                        android:textSize="@dimen/txt_size_14"
                        android:text="乡镇卫生院" />

                </com.mixiaoxiao.smoothcompoundbutton.SmoothRadioGroup>

                <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioGroup
                    android:id="@+id/rg_adress2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioButton
                        android:id="@+id/rb_adress4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/txt_size_14"
                        android:textColor="#818181"
                        android:text="其他" />

                    <EditText
                        android:textColor="#818181"
                        android:textSize="@dimen/txt_size_14"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="12dip"
                        android:id="@+id/et_execu_addressother"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_weight="2.5"
                        android:background="@drawable/gray_border_gray_background"
                        />

                </com.mixiaoxiao.smoothcompoundbutton.SmoothRadioGroup>
                </LinearLayout>



               <!-- <TextView

                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_weight="6"
                    android:text="上门"

                    android:textSize="16.0dip" />-->

            </LinearLayout>

            <LinearLayout

                style="@style/ll_bg_mid_layout"
                android:orientation="horizontal" >



                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginLeft="12.0dip"
                    android:text="执行情况"
                    android:textColor="#191616"
                    android:textSize="@dimen/txt_size_14" />


                <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioGroup
                    android:id="@+id/rg_info"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_weight="6"
                    android:orientation="horizontal">

                    <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioButton
                        android:id="@+id/rb_info1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_size_14"
                        android:textColor="#818181"
                        android:text="已执行" />

                    <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioButton
                        android:id="@+id/rb_info2"
                        android:layout_marginLeft="8dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_size_14"
                        android:textColor="#818181"
                        android:text="未执行" />

                </com.mixiaoxiao.smoothcompoundbutton.SmoothRadioGroup>
            </LinearLayout>

            <LinearLayout

                android:id="@+id/ll_pend_execu"
                style="@style/ll_bg_mid_layout"
                android:orientation="horizontal" >



                <TextView
                    android:layout_marginTop="5dip"
                    android:layout_gravity="top"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginLeft="12.0dip"
                    android:text="未执行原因"
                    android:textColor="#191616"
                    android:textSize="@dimen/txt_size_14" />


                <LinearLayout
                    android:background="#fff"
                    android:orientation="vertical"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_weight="6">

                    <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioGroup
                        android:id="@+id/rg_reason1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioButton
                            android:id="@+id/rb_reason1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txt_size_14"
                            android:textColor="#818181"
                            android:text="医生拒绝" />

                        <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioButton
                            android:id="@+id/rb_reason2"
                            android:layout_marginLeft="8dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txt_size_14"
                            android:textColor="#818181"
                            android:text="居民拒绝" />


                    </com.mixiaoxiao.smoothcompoundbutton.SmoothRadioGroup>

                    <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioGroup
                        android:id="@+id/rg_reason2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioButton
                            android:id="@+id/rb_reason3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/txt_size_14"
                            android:textColor="#818181"
                            android:text="其他" />

                        <EditText
                            android:visibility="gone"
                            android:textColor="#818181"
                            android:textSize="@dimen/txt_size_14"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="12dip"
                            android:id="@+id/et_reason_other"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:layout_weight="2.5"
                            android:background="@drawable/gray_border_gray_background"
                            />

                    </com.mixiaoxiao.smoothcompoundbutton.SmoothRadioGroup>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_height="wrap_content"
                style="@style/ll_bg_mid_layout"
                android:orientation="horizontal" >



                <TextView
                    android:layout_marginTop="5dip"
                    android:layout_gravity="top"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginLeft="12.0dip"
                    android:text="服务情况"
                    android:textColor="#191616"
                    android:textSize="@dimen/txt_size_14" />


               <!-- <ScrollView
                    android:id="@+id/ScrollView2"
