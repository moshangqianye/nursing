                            android:textColor="#818181"
                            android:padding="5dip"
                            android:visibility="gone"
                            android:layout_marginRight="12dip"
                            android:id="@+id/et_execu_serviceinfo"
                            android:layout_width="0dip"
                            android:layout_height="100dip"
                            android:layout_marginLeft="18dip"
                            android:layout_weight="6"
                            android:background="@drawable/gray_border_gray_background"
                            />
                    </TableRow>
                </ScrollView>-->

               <EditText
                    android:textSize="@dimen/txt_size_14"
                    android:textColor="#818181"
                    android:padding="5dip"
                    android:visibility="gone"
                    android:layout_marginRight="12dip"
                    android:id="@+id/et_execu_serviceinfo"
                    android:layout_width="0dip"
                    android:layout_height="100dip"
                    android:layout_marginLeft="18dip"
                    android:layout_weight="6"
                    android:background="@drawable/gray_border_gray_background"
                    />
               <!-- <signed_resident_client.view.ListViewForScrollView

                    android:visibility="visible"
                    android:id="@+id/lv_server_situation"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_weight="6"
                    />-->

                <ListView

                    android:visibility="visible"
                    android:id="@+id/lv_server_situation"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_weight="6"
                    />

            </LinearLayout>

            <LinearLayout

                style="@style/ll_bg_mid_layout"
                android:orientation="horizontal" >



                <TextView

                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginLeft="12.0dip"
                    android:text="下次时间"
                    android:textColor="#191616"
                    android:textSize="@dimen/txt_size_14" />

                <EditText
                    android:focusable="false"
                    android:textColor="#818181"
                    android:textSize="@dimen/txt_size_14"
                    android:layout_marginRight="12dip"
                    android:id="@+id/et_execu_nextdate"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dip"
                    android:layout_weight="6"
                    android:background="@drawable/gray_border_gray_background"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


