<?xml version="1.0" encoding="utf-8"?>

   <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
       android:layout_width="match_parent"
       android:layout_height="match_parent">


    <include
        android:id="@+id/ll_toobar"
        layout="@layout/fragment_all_module_handle_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

   <LinearLayout

       android:layout_below="@+id/ll_toobar"
       android:background="#fff"
       android:id="@+id/ll_one"
       android:layout_width="match_parent"
       android:layout_height="@dimen/nine_size_80"
       android:orientation="horizontal"
       >

       <LinearLayout

           android:id="@+id/ll_zhudong"
           android:layout_width="0dip"
           android:layout_weight="1"
           android:layout_height="@dimen/nine_size_80"
           android:orientation="horizontal"
           android:gravity="center"
           >

           <ImageView

               android:layout_marginLeft="8dip"
               android:layout_marginTop="3dip"
               android:layout_width="40dip"
               android:layout_height="40dip"
               android:src="@mipmap/icon_find"
               />
           <RelativeLayout
               android:gravity="center"
               android:layout_gravity="center"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
           <TextView
               android:id="@+id/tv_find"
               android:layout_marginLeft="3dip"
               android:textColor="@color/title_color"
               android:textSize="@dimen/txt_size_15"
               android:text="主动发现"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               />

               <TextView
                   android:ellipsize="end"
                   android:maxEms="8"
                   android:singleLine="true"
                android:layout_below="@+id/tv_find"
                   android:layout_marginLeft="3dip"
                   android:textColor="@color/datetime_color"
                   android:textSize="@dimen/txt_size_13"
                   android:text="我的发现、待办发现"

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   />
           </RelativeLayout>
       </LinearLayout>

     <View
         android:background="@color/separator_color"
         android:layout_width="1dip"
         android:layout_height="match_parent"/>

       <LinearLayout
           android:id="@+id/socailayout"
           android:layout_width="0dip"
           android:layout_weight="1"
           android:layout_height="@dimen/nine_size_80"
           android:orientation="horizontal"
           android:gravity="center"
           >

           <ImageView
               android:layout_marginLeft="8dip"
               android:layout_marginTop="3dip"
               android:layout_width="40dip"
               android:layout_height="40dip"
               android:src="@mipmap/icon_jiuzhu"
               />
           <RelativeLayout
               android:gravity="center"
               android:layout_gravity="center"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/tv_rescue"
                   android:layout_marginLeft="3dip"
                   android:textColor="@color/title_color"
                   android:textSize="@dimen/txt_size_15"
                   android:text="社会救助"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   />

               <TextView
                   android:ellipsize="end"
                   android:maxEms="8"
                   android:singleLine="true"
                   android:layout_below="@+id/tv_rescue"
                   android:layout_marginLeft="3dip"
                   android:textColor="@color/datetime_color"
                   android:textSize="@dimen/txt_size_13"
                   android:text="城乡低保、医疗救助"

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   />
           </RelativeLayout>
       </LinearLayout>
   </LinearLayout>

<View
    android:layout_below="@+id/ll_one"
    android:id="@+id/view1"
    android:layout_width="match_parent"
    android:layout_height="1dip"
    android:background="@color/separator_color"/>



       <LinearLayout

           android:visibility="gone"
           android:background="#fff"
           android:id="@+id/ll_two"
           android:layout_below="@+id/view1"
           android:layout_width="match_parent"
           android:layout_height="@dimen/nine_size_80"
           android:orientation="horizontal"
           >

           <LinearLayout
               android:id="@+id/ll_fangzai"
               android:layout_width="0dip"
               android:layout_weight="1"
               android:layout_height="@dimen/nine_size_80"
               android:orientation="horizontal"
               android:gravity="center"
               >

               <ImageView
                   android:layout_marginLeft="10dip"
                   android:layout_marginTop="3dip"
                   android:layout_width="40dip"
                   android:layout_height="40dip"
                   android:src="@mipmap/icon_fangzhai"

                   />
               <RelativeLayout
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <TextView
                       android:id="@+id/tv_prevent_rediuction"
                       android:layout_marginLeft="4dip"
                       android:textColor="@color/title_color"
                       android:textSize="@dimen/txt_size_15"
                       android:text="防灾减灾"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       />

                   <TextView
                       android:singleLine="true"
                       android:layout_below="@+id/tv_prevent_rediuction"
                       android:layout_marginLeft="4dip"
                       android:textColor="@color/datetime_color"
                       android:textSize="@dimen/txt_size_13"
                       android:text="灾情上报、灾情预警"

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       />
               </RelativeLayout>

           </LinearLayout>

           <View
               android:background="@color/separator_color"
               android:layout_width="1dip"
               android:layout_height="match_parent"/>

           <LinearLayout
               android:id="@+id/ll_zhili"
               android:layout_width="0dip"
               android:layout_weight="1"
               android:layout_height="@dimen/nine_size_80"
               android:orientation="horizontal"
               android:gravity="center"
               >

               <ImageView
                   android:layout_marginLeft="10dip"
                   android:layout_marginTop="3dip"
                   android:layout_width="40dip"
                   android:layout_height="40dip"
                   android:src="@mipmap/icon_social"
                   />
               <RelativeLayout
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <TextView
                       android:id="@+id/tv_social_governance"
                       android:layout_marginLeft="4dip"
                       android:textColor="@color/title_color"
                       android:textSize="@dimen/txt_size_15"
                       android:text="社会治理"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       />

                   <TextView
                       android:singleLine="true"
                       android:layout_below="@+id/tv_social_governance"
                       android:layout_marginLeft="4dip"
                       android:textColor="@color/datetime_color"
                       android:textSize="@dimen/txt_size_13"
                       android:text="公共设施                  "

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       />
               </RelativeLayout>

           </LinearLayout>





     </LinearLayout>
    <View
        android:visibility="gone"
        android:layout_below="@+id/ll_two"
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/separator_color"/>


       <LinearLayout
           android:visibility="gone"

           android:background="#fff"

           android:layout_below="@+id/view3"
           android:id="@+id/ll_tree"
           android:layout_width="match_parent"
           android:layout_height="@dimen/nine_size_80"
           android:orientation="horizontal"
           >

           <LinearLayout
               android:id="@+id/ll_fuwu"
               android:layout_width="0dip"
               android:layout_weight="1"
               android:layout_height="@dimen/nine_size_80"
               android:orientation="horizontal"
               android:gravity="center"
               >

               <ImageView
                   android:layout_marginLeft="10dip"
                   android:layout_marginTop="3dip"
                   android:layout_width="40dip"
                   android:layout_height="40dip"
                   android:src="@mipmap/icon_server"
                   />
               <RelativeLayout
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <TextView
                       android:id="@+id/tv_social_servece"
                       android:layout_marginLeft="4dip"
                       android:textColor="@color/title_color"
                       android:textSize="@dimen/txt_size_15"
                       android:text="社会服务"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       />

                   <TextView
                       android:singleLine="true"
                       android:layout_below="@+id/tv_social_servece"
                       android:layout_marginLeft="4dip"
                       android:textColor="@color/datetime_color"
                       android:textSize="@dimen/txt_size_13"
                       android:text="老年人登记、老年人注销"

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       />
               </RelativeLayout>

           </LinearLayout>

           <View
               android:background="@color/separator_color"
               android:layout_width="1dip"
               android:layout_height="match_parent"/>

           <LinearLayout
               android:id="@+id/ll_guofang"
               android:layout_width="0dip"
               android:layout_weight="1"
               android:layout_height="@dimen/nine_size_80"
               android:orientation="horizontal"
               android:gravity="center"
               >

               <ImageView
                   android:layout_marginLeft="10dip"
                   android:layout_marginTop="3dip"
                   android:layout_width="40dip"
                   android:layout_height="40dip"
                   android:src="@mipmap/icon_guofang"
                   />

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"
                   android:gravity="center">

                   <TextView
                       android:id="@+id/tv_national_defence"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="4dip"
                       android:text="国防与军队改革"
                       android:textColor="@color/title_color"
                       android:textSize="@dimen/txt_size_15" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/tv_national_defence"
                       android:layout_marginLeft="4dip"
                       android:singleLine="true"
                       android:text="优抚对象登记"

                       android:textColor="@color/datetime_color"
                       android:textSize="@dimen/txt_size_13" />
               </RelativeLayout>

           </LinearLayout>
       </LinearLayout>


       <View
           android:visibility="gone"
           android:layout_below="@+id/ll_tree"
           android:id="@+id/view2"
           android:layout_width="match_parent"
           android:layout_height="1dip"
           android:background="@color/separator_color"/>

       <LinearLayout

android:visibility="gone"
           android:background="#fff"
           android:id="@+id/ll_setting"
           android:layout_below="@+id/view2"
           android:layout_width="match_parent"
           android:layout_marginTop="20dip"
           android:layout_height="50dip"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:paddingBottom="10dip"
           >

           <LinearLayout
               android:id="@+id/usually_setting"
               android:layout_marginLeft="10dip"
               android:layout_gravity="center"
               android:layout_width="0dip"
               android:layout_height="60dip"
               android:layout_weight="1"
               android:gravity="center_vertical"
               android:orientation="horizontal">

               <ImageView
                   android:layout_width="30dip"
                   android:layout_height="30dip"
                   android:layout_marginTop="3dip"
                   android:src="@mipmap/r_sign_service_assess" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dip"
                   android:text="常用设置"
                   android:textColor="@color/black"
                   android:textSize="@dimen/txt_size_16" />
           </LinearLayout>


       </LinearLayout>







   </RelativeLayout>

