<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/leba_bg_layout"
    >
    <LinearLayout
        style="@style/leba_bg_top_layout"
        android:orientation="vertical"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        >

        <LinearLayout
            style="@style/ll_bg_mid_layout"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_weight="4"
                android:text="****"
                android:textColor="@color/title_color"
                android:textSize="@dimen/txt_size_14" />

            <TextView
                android:id="@+id/tv_status"

                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_weight="6"
                android:gravity="right"
                android:text="状态:*********"
                android:textColor="@color/subtitle_color"
                android:textSize="@dimen/txt_size_14" />
        </LinearLayout>

        <LinearLayout

            style="@style/ll_bg_mid_layout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_weight="4"
                android:text="身份证号"
                android:textColor="@color/title_color"
                android:textSize="@dimen/txt_size_14" />

            <TextView
                android:id="@+id/tv_idcard"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_weight="6"
                android:gravity="right"
                android:text="******************"
                android:textColor="@color/subtitle_color"
                android:textSize="@dimen/txt_size_14" />
        </LinearLayout>

        <LinearLayout
            style="@style/ll_bg_mid_layout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_weight="4"
                android:text="申请日期"
                android:textColor="@color/title_color"
                android:textSize="@dimen/txt_size_14" />

            <TextView
                android:id="@+id/tv_applyriqi"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_weight="6"
                android:gravity="right"
                android:text="**********"
                android:textColor="@color/subtitle_color"
                android:textSize="@dimen/txt_size_14" />
        </LinearLayout>

        <LinearLayout
            style="@style/ll_bg_mid_layout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_weight="4"
                android:text="救助类别"
                android:textColor="@color/title_color"
                android:textSize="@dimen/txt_size_14" />

            <TextView
                android:id="@+id/tv_leibie"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_weight="6"
                android:gravity="right"
                android:text="**********"
                android:textColor="@color/subtitle_color"
                android:textSize="@dimen/txt_size_14" />
        </LinearLayout>


        <View
            android:layout_marginTop="5dip"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@drawable/leba_shape_line" />

    </LinearLayout>
        <RelativeLayout
            android:paddingTop="5dip"
            android:layout_height="35dip"
            style="@style/leba_bg_bottom_layout"
            android:id="@+id/title_manageinfo"
            >

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/ll_liucheng"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView

                android:layout_width="18dip"
                android:layout_height="18dip"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/icon_lishi" />

            <TextView

                android:textColor="@color/colorTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:text="查看流程"
                android:textSize="16sp" />

            </LinearLayout>

                <View
                    android:layout_marginLeft="8dip"
                    android:background="@color/colorTheme"
                    android:layout_height="match_parent"
                    android:layout_width="1dip"/>

                <LinearLayout
                    android:id="@+id/ll_baseinfo"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
              <ImageView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/icon_baseinfo" />

            <TextView

                android:textColor="@color/colorTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:text="基本信息"
                android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>


            <Button

                android:gravity="center"
                android:textSize="@dimen/txt_size_14"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_del"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:textColor="#62A9E7"
                android:background="@drawable/circle_corner_button_selector"
                android:text="删除" />
        </RelativeLayout>




</LinearLayout>