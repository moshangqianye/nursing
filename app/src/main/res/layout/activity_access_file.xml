<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee"
    tools:context="com.jqsoft.nursing.di.ui.activity.AccessFileActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorTheme"
        app:contentInsetStart="0.0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!--// app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"可以出水波纹-->
        <TextView
            android:id="@+id/directory_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签约居民档案"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/ToolBar.Title"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/dp_3">
            <ImageView
                android:layout_width="@dimen/img_width_18dp"
                android:layout_height="@dimen/img_height_18dp"
                android:contentDescription=""
                android:src="@mipmap/arrow_left"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textAppearance="@style/ToolBar.Title"
                android:layout_marginLeft="@dimen/dp_3"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_directory_title_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_gravity="right"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_directory_title_menu"
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription=""
                android:src="@mipmap/message_white" />
        </FrameLayout>
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:id="@+id/sv_job_overview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_marginTop="20dip"
                android:id="@+id/ll_first"
                style="@style/leba_bg_layout" >


                <LinearLayout
                    style="@style/leba_bg_top_layout"
                    android:id="@+id/ll_top"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_head"
                        android:layout_marginLeft="5dip"
                        android:layout_width="50dip"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:src="@mipmap/person">
                    </ImageView>

                    <LinearLayout

                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_width="0dip"
                        android:layout_height="50dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dip"
                        >

                        <LinearLayout

                            android:id="@+id/ll_name"
                            android:layout_width="match_parent"
                            android:layout_height="20dip"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_file_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/txt_size_15"
                                android:text="***"
                                android:textColor="#191616"
                                />
                            <ImageView
                                android:id="@+id/iv_file_sex"
                                android:layout_marginLeft="5dip"
                                android:src="@mipmap/i_male"
                                android:layout_width="16dip"
                                android:layout_height="16dip" />

                            <TextView
                                android:id="@+id/tv_file_age"
                                android:layout_marginLeft="5dip"
                                android:layout_width="50dip"
                                android:layout_height="wrap_content"
                                android:text="**岁"
                                android:textColor="#191616"
                                android:textSize="@dimen/txt_size_15"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_phone"
                            android:layout_below="@+id/ll_name"
                            android:layout_width="match_parent"
                            android:layout_height="20dip"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >

                            <ImageView
                                android:id="@+id/iv_tang"
                                android:layout_width="16dip"
                                android:layout_height="16dip"
                                android:src="@mipmap/file_phone"
                                />

                            <TextView
                                android:layout_marginLeft="5dip"
                                android:id="@+id/tv_file_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/txt_size_15"
                                android:text="************"
                                android:textColor="#191616"
                                />

                        </LinearLayout>


                    </LinearLayout>




                </LinearLayout>
                <View
                    android:id="@+id/view_top"
                    android:layout_below="@+id/ll_top"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@drawable/leba_shape_line" />

                <LinearLayout
                    android:id="@+id/ll_data"
                    style="@style/leba_bg_bottom_layout"
                    android:layout_below="@+id/view_top"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/ll_idcard"
                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:text="证件号码"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14" />
                        <TextView
                            android:id="@+id/tv_file_idcard"
                            android:layout_marginRight="12dip"
                            android:gravity="right"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            android:text="******************"
                            android:textColor="#191616"
                            android:textSize="@dimen/txt_size_14" />
                    </LinearLayout>

                    <LinearLayout

                        android:id="@+id/ll_dossier"
                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:text="联系人"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14" />
                        <TextView
                            android:id="@+id/tv_file_contact"
                            android:layout_marginRight="12dip"
                            android:gravity="right"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            android:text="*****************"
                            android:textColor="#191616"
                            android:textSize="@dimen/txt_size_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_doctor"
                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:text="血型"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14" />
                        <TextView
                            android:id="@+id/tv_blood_type"
                            android:layout_marginRight="12dip"
                            android:gravity="right"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            android:text="**"
                            android:textColor="#363334"
                            android:textSize="@dimen/txt_size_14" />
                    </LinearLayout>
                    <LinearLayout
                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:text="RH"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14" />
                        <TextView
                            android:id="@+id/tv_rh"
                            android:layout_marginRight="12dip"
                            android:gravity="right"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            android:text="**"
                            android:textColor="#363334"
                            android:textSize="@dimen/txt_size_14" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_execu_date"
                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:text="药物过敏史"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14" />
                        <TextView
                            android:id="@+id/tv_drug_allergy"
                            android:layout_marginRight="12dip"
                            android:gravity="right"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            android:text="************"
                            android:textColor="#191616"
                            android:textSize="@dimen/txt_size_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_medical_type"
                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                    <!--    <TextView
                            android:layout_weight="4"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:text="既往史"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14" />-->

                        <TextView
                            android:layout_marginTop="5dip"
                            android:layout_gravity="top"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="12.0dip"
                            android:text="既往史"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14" />

                        <ListView

                            android:divider="@null"
                            android:visibility="visible"
                            android:id="@+id/lv_past_history"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            />

                       <!-- <TextView
                            android:id="@+id/tv_past_history"
                            android:layout_marginRight="12dip"
                            android:gravity="right"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            android:text="***"
                            android:textColor="#191616"
                            android:textSize="@dimen/txt_size_14" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_service_term"
                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:text="遗传病史"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14" />
                        <TextView

                            android:layout_marginRight="12dip"
                            android:gravity="right"
                            android:id="@+id/tv_genetic_history"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            android:text="****"
                            android:textColor="#191616"
                            android:textSize="@dimen/txt_size_14" />
                    </LinearLayout>


                    <LinearLayout

                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:text="疾病情况"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14" />
                        <TextView

                            android:layout_marginRight="12dip"
                            android:gravity="right"

                            android:id="@+id/tv_disease_info"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            android:text="****"
                            android:textColor="#191616"
                            android:textSize="@dimen/txt_size_14" />
                    </LinearLayout>


                    <LinearLayout

                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:text="建档日期"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14" />
                        <TextView

                            android:layout_marginRight="12dip"
                            android:gravity="right"

                            android:id="@+id/tv_create_file"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            android:text="****"
                            android:textColor="#191616"
                            android:textSize="@dimen/txt_size_14" />
                    </LinearLayout>


                    <LinearLayout

                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:text="建档机构"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14" />
                        <TextView

                            android:layout_marginRight="12dip"
                            android:gravity="right"

                            android:id="@+id/tv_create_org"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            android:text="****"
                            android:textColor="#191616"
                            android:textSize="@dimen/txt_size_14" />
                    </LinearLayout>


                    <LinearLayout

                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:text="责任医生"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14" />
                        <TextView

                            android:layout_marginRight="12dip"
                            android:gravity="right"

                            android:id="@+id/tv_doctor_name"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            android:text="****"
                            android:textColor="#191616"
                            android:textSize="@dimen/txt_size_14" />
                    </LinearLayout>


                </LinearLayout>





            </LinearLayout>


        </LinearLayout>
    </ScrollView>




</LinearLayout>
