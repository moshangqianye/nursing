<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <include
        layout="@layout/fragment_inhospital_inspect_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/framelayout">
    <include layout="@layout/layout_recyclerview_inhospital"


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <include
        android:id="@+id/lay_inhospital_load_failure"
        layout="@layout/layout_load_list_result_empty_placeholder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
    </FrameLayout>
</LinearLayout>