<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10">

    <ImageView
        android:id="@+id/civ_head_new"
        android:layout_width="@dimen/dp_60"
        android:layout_height="100dip"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_touxiang" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                tools:text="张三" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                tools:text="男" />

            <TextView
                android:id="@+id/tv_bad_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                tools:text="002" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            tools:text="123456789012345"
            android:layout_marginTop="@dimen/dp_10"/>

        <TextView
            android:id="@+id/tv_id_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            tools:text="123456789012345"
            android:layout_marginTop="@dimen/dp_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                tools:text="1" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                tools:text="1" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="人脸识别"
                android:textColor="@color/main_color"
                android:textSize="@dimen/txt_size_14"
                android:background="@drawable/positive_background_positive_round_corner_border"/>

            <TextView
                android:id="@+id/tv_chongzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="充值"
                android:textColor="@color/main_color"
                android:textSize="@dimen/txt_size_14"
                android:background="@drawable/positive_background_positive_round_corner_border"/>
            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="消费"
                android:textColor="@color/main_color"
                android:textSize="@dimen/txt_size_14"
                android:background="@drawable/positive_background_positive_round_corner_border"/>
            <TextView
                android:id="@+id/tv_healthy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="健康测量"
                android:textColor="@color/main_color"
                android:textSize="@dimen/txt_size_14"
                android:background="@drawable/positive_background_positive_round_corner_border"/>
        </LinearLayout>
    </LinearLayout>



    </LinearLayout>
