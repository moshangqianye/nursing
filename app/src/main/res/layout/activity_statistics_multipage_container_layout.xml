<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/activity_statistics_multipage_container_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:paddingBottom="@dimen/tab_layout_padding_bottom"
        tl:tl_divider_color="#1AFFFFFF"
        tl:tl_divider_padding="@dimen/dp_0"
        tl:tl_divider_width="@dimen/dp_0"
        tl:tl_indicator_color="#FFFFFF"
        tl:tl_indicator_height="@dimen/tab_layout_indicator_height"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_padding="@dimen/dp_2"
        tl:tl_tab_space_equal="true"
        tl:tl_textsize="@dimen/txt_size_normal"
        tl:tl_textSelectColor="#FFFFFF"
        tl:tl_textUnselectColor="#66FFFFFF"
        tl:tl_underline_color="@color/colorTheme"
        tl:tl_underline_height="@dimen/dp_3"
        tl:tl_indicator_style="NORMAL"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>