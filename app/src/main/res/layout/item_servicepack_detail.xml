<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#EBEBEC"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_first"
        style="@style/leba_bg_layout" >


        <LinearLayout
            style="@style/leba_bg_top_layout"
            android:id="@+id/ll_top"

            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_pack_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="******"
                android:textColor="?attr/colorPrimary"
                android:textSize="15sp" />

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@drawable/leba_shape_line" />

        <LinearLayout
            android:id="@+id/ll_data"
            style="@style/leba_bg_bottom_layout"
            android:layout_below="@+id/view_top"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/ll_idcard"
                style="@style/ll_bg_mid_layout"
                android:orientation="horizontal" >
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.0dip"
                    android:text="执行次数:"
                    android:textColor="#818181"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_numers"
                    android:layout_marginRight="12dip"
                    android:gravity="left"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_weight="6"
                    android:text="**次"
                    android:textColor="#818181"
                    android:textSize="16.0dip" />
            </LinearLayout>

            <LinearLayout
                style="@style/ll_bg_mid_layout"
                android:orientation="horizontal" >

                <TextView
                    android:layout_marginTop="5dip"
                    android:layout_gravity="top"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.0dip"
                    android:layout_weight="2"
                    android:text="说　　明:"
                    android:textColor="#818181"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_instruction"
                    android:layout_marginRight="12dip"
                    android:gravity="left"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_weight="6"
                    android:text="***************************************************************"
                    android:textColor="#818181"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/ll_bg_mid_layout"
                android:orientation="horizontal" >
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.0dip"
                    android:text="执行单位:"
                    android:textColor="#818181"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_marginRight="12dip"
                    android:gravity="left"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_weight="6"
                    android:text="****"
                    android:textColor="#818181"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>