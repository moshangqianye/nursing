        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/margin_10dp">

                <TextView
                    android:id="@+id/servertitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="老年人基础包"
                    android:textColor="#191616"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/paketype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="基础"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_projName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="1dp"
                android:lineSpacingMultiplier="1.2"
                android:lines="1"
                android:maxLength="50"
                android:text="老年人基础包老年人基础包老年人基础包老年人基础包老年人基础包老年人基础包"
                android:textColor="#818181"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="1dp"
                    android:lineSpacingMultiplier="1"
                    android:paddingBottom="8dp"
                    android:text="100 元100 元100 元100 元100 元100 元100 元100 元100 元100 元100 元"
                    android:textColor="#c1c1c1"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>