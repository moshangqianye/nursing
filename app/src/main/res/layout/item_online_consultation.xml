<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_4"
    android:layout_marginTop="@dimen/dp_8"
    android:background="@color/all_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_10dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/img_width_normal"
                android:layout_height="@dimen/img_height_normal"
                android:scaleType="fitXY"
                android:src="@mipmap/person" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_15" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_15" />


                    <!--<signed_resident_client.view.RectanglePercentageView-->
                    <!--android:id="@+id/rpv_ratio"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="@dimen/rectangle_percentage_height"-->
                    <!--android:layout_marginLeft="@dimen/margin_small"-->
                    <!--android:layout_weight="1" />-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/iv_tang"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/iv_gao"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            />
                        <ImageView
                            android:id="@+id/iv_lao"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            />
                        <ImageView
                            android:id="@+id/iv_jing"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            />
                        <ImageView
                            android:id="@+id/iv_mian"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            />
                        <ImageView
                            android:id="@+id/iv_pin"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            />
                        <ImageView
                            android:id="@+id/iv_tong"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            />
                        <ImageView
                            android:id="@+id/iv_tuo"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            />
                        <ImageView
                            android:id="@+id/iv_yun"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_package_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/package_name_color"
                        android:textSize="@dimen/txt_size_15" />

                    <TextView
                        android:id="@+id/tv_package_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_xsmall" />

                </LinearLayout>


            </LinearLayout>

            <com.jqsoft.nursing.view.DonutProgressView
                android:id="@+id/dpv_progress"
                android:layout_width="@dimen/donut_progress_view_width"
                android:layout_height="@dimen/donut_progress_view_height"
                android:layout_marginLeft="@dimen/margin_normal"
                app:donut_progress_backgroundColor="@android:color/transparent"
                app:donut_progress_backgroundDonutColor="@color/donut_not_filled"
                app:donut_progress_percentage="0.6"
                app:donut_progress_percentageDonutColor="@color/colorTheme"
                app:donut_progress_width="4dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/dash_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/online_consultation_message_color"
                android:textSize="@dimen/txt_size_15" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/online_consultation_time_color"
                android:textSize="@dimen/txt_size_15" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>


