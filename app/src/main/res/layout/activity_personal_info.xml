<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    android:orientation="vertical">

    <include
        layout="@layout/activity_my_info_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="5dp"
        >
        <ImageView
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/icon_mpersonal"
            android:layout_width="20dp"
            android:layout_height="40dp" />
        <TextView
            android:background="@null"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="14dp"
            android:gravity="center_vertical"
            android:text="用户名"
            android:textColor="@color/colorTabText"
            android:textSize="16sp" />

        <TextView
            android:gravity="center|right"
            android:id="@+id/tv_loginname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:lines="1"
            android:hint=""
            android:maxLength="16"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColor="@color/black_alpha_112"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="5dp"
        >
        <ImageView
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/icon_mpersonal"
            android:layout_width="20dp"
            android:layout_height="40dp" />
        <TextView
            android:background="@null"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="14dp"
            android:gravity="center_vertical"
            android:text="姓  名"
            android:textColor="@color/colorTabText"
            android:textSize="16sp" />

        <TextView

            android:gravity="center|right"
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:lines="1"
            android:hint=""
            android:maxLength="16"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColor="@color/black_alpha_112"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#e8e8e8"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_marginRight="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="5dp"
        >
        <ImageView
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/icon_mpersonal"
            android:layout_width="20dp"
            android:layout_height="40dp" />
        <TextView
            android:background="@null"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="14dp"
            android:gravity="center_vertical"
            android:text="性  别"
            android:textColor="@color/colorTabText"
            android:textSize="16sp" />

        <TextView

            android:gravity="center|right"
            android:id="@+id/EmployeeSex"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:lines="1"
            android:hint=""
            android:maxLength="16"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColor="@color/black_alpha_112"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#e8e8e8"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_marginRight="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="5dp"
        >
        <ImageView
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/icon_mpersonal"
            android:layout_width="20dp"
            android:layout_height="40dp" />
        <TextView
            android:background="@null"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="14dp"
            android:gravity="center_vertical"
            android:text="所属机构"
            android:textColor="@color/colorTabText"
            android:textSize="16sp" />

        <TextView

            android:gravity="center|right"
            android:id="@+id/sOrgName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:lines="1"
            android:hint=""
            android:maxLength="16"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColor="@color/black_alpha_112"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1px"
        android:background="@drawable/shape_corner_down"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="5dp"
        >
        <ImageView
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/icon_mphone"
            android:layout_width="20dp"
            android:layout_height="40dp" />
        <TextView
            android:background="@null"

            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="14dp"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textColor="@color/colorTabText"
            android:textSize="16sp" />

        <TextView
            android:gravity="center|right"
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:lines="1"
            android:hint=""
            android:maxLength="16"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColor="@color/black_alpha_112"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#e8e8e8"
        android:layout_gravity="center_horizontal"
        />





</LinearLayout>