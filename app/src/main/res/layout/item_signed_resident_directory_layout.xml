<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/margin_10dp"
    android:layout_marginRight="@dimen/margin_10dp"
    android:layout_marginTop="@dimen/margin_10dp"
    android:padding="@dimen/padding_10dp"
    android:background="@drawable/white_background_with_round_corner">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/text_min_width"
                android:text=""
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/txt_size_normal" />
            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:text=""
                android:textColor="@color/black"
                android:textColorLink="@color/blue"
                android:textSize="@dimen/txt_size_normal"
                android:autoLink="none"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="@dimen/txt_size_14" />

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/img_width_large"
        android:layout_height="@dimen/img_height_large"
        android:src="@mipmap/i_assess_dial"
        android:scaleType="fitXY"
        android:id="@+id/iv_dial"/>

</LinearLayout>