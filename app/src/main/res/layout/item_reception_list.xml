<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dip"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_marginTop="8dip"
        android:layout_marginBottom="8dip"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="85dip">

        <ImageView
            android:layout_marginLeft="10dip"
            android:src="@mipmap/icon_wutu"
            android:id="@+id/iv_title"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY" />
        <LinearLayout

            android:padding="5dp"
            android:layout_toRightOf="@+id/iv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:gravity="center"
                android:textSize="@dimen/txt_size_14"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_del"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:textColor="#62A9E7"
                android:background="@drawable/circle_corner_button_selector"
                android:text="删除" />



            <TextView
                android:layout_centerVertical="true"
                android:textSize="@dimen/txt_size_14"
                android:background="@drawable/semi_round_chulizhong"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:text="***"
                android:id="@+id/tv_state"
                android:layout_width="40dp"
                android:layout_height="20dp"


               />


        </RelativeLayout>




        <TextView
            android:textSize="@dimen/txt_size_15"
            android:id="@+id/tv_qingkuang"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/large_text"
            android:textColor="@color/black" />

        <LinearLayout
            android:paddingTop="5dip"
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal">


            <TextView
                android:textSize="@dimen/txt_size_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交日期:" />
            <TextView
                android:textSize="@dimen/txt_size_14"
                android:id="@+id/tv_riqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-12-31" />

        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>



</LinearLayout>