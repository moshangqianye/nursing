<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:zhy="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_marginLeft="10dip"
        android:gravity="center"
        android:id="@+id/ll_photo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"

        >
        <ImageView

            android:src="@drawable/bitian"
            android:layout_width="8dip"
            android:layout_height="8dip" />

        <TextView
            android:layout_marginLeft="2dip"
            android:textColor="#191616"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white"
            android:text="老人姓名:"
            android:textSize="15sp" />

        <TextView
            android:layout_marginRight="10dip"
            android:textColor="#818181"
            android:text=""
            android:id="@+id/et_elder_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="请输入姓名"

            android:maxLength="15"
            android:textSize="14sp" />

    </LinearLayout>
    <View
        android:id="@+id/view5"
        android:background="#e8e8e8"
        android:layout_below="@+id/ll_photo"
        android:layout_width="match_parent"
        android:layout_height="1dip"/>

    <LinearLayout
        android:layout_marginLeft="10dip"
        android:layout_below="@+id/view5"
        android:gravity="center"
        android:id="@+id/ll_shenfen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView


            android:src="@drawable/bitian"
            android:layout_width="8dip"
            android:layout_height="8dip" />

        <TextView
            android:layout_marginLeft="2dip"
            android:textColor="#191616"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white"
            android:text="身份证号:"
            android:textSize="15sp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_idcard"
            android:layout_marginRight="3dip"
            android:src="@mipmap/take_photo_grey"
            android:layout_width="25dip"
            android:layout_height="25dip" />


        <TextView
            android:id="@+id/et_idcard"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789X"
            android:gravity="center_vertical|right"
            android:hint="请输入身份证号"
            android:maxLength="18"
            android:text=""
            android:textColor="#818181"
            android:textSize="14sp" />


    </LinearLayout>

    <View
        android:id="@+id/view6"
        android:background="#e8e8e8"
        android:layout_below="@+id/ll_shenfen"
        android:layout_width="match_parent"
        android:layout_height="1dip"/>


    <LinearLayout
        android:layout_marginLeft="10dip"
        android:layout_below="@+id/view6"
        android:gravity="center"
        android:id="@+id/ll_xingbie"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"

        >
        <ImageView


            android:src="@drawable/bitian"
            android:layout_width="8dip"
            android:layout_height="8dip" />

        <TextView
            android:layout_marginLeft="2dip"
            android:textColor="#191616"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white"
            android:text="家庭地址:"
            android:textSize="15sp" />

        <TextView
            android:lines="2"
            android:textColor="#818181"
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint=""
            android:inputType="textEmailAddress"
            android:maxLength="40"
            android:textSize="14sp" />


    </LinearLayout>

    <View
        android:id="@+id/view8"
        android:background="#e8e8e8"
        android:layout_below="@+id/ll_xingbie"
        android:layout_width="match_parent"
        android:layout_height="1dip"/>


    <LinearLayout
        android:layout_marginLeft="10dip"

        android:layout_below="@+id/view8"
        android:gravity="center"
        android:id="@+id/ll_minzu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView


            android:src="@drawable/bitian"
            android:layout_width="8dip"
            android:layout_height="8dip" />

        <TextView
            android:layout_marginLeft="2dip"
            android:textColor="#191616"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white"
            android:text="注销原因:"
            android:textSize="15sp" />

        <TextView
            android:textColor="#818181"
            android:text=""
            android:id="@+id/tv_reason"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="请选择民族"
            android:inputType="textEmailAddress"
            android:maxLength="40"
            android:textSize="14sp" />


    </LinearLayout>

    <View
        android:id="@+id/view7"
        android:background="#e8e8e8"
        android:layout_below="@+id/ll_minzu"
        android:layout_width="match_parent"
        android:layout_height="1dip"/>


    <LinearLayout
        android:layout_marginLeft="10dip"
        android:layout_below="@+id/view7"
        android:gravity="center"
        android:id="@+id/ll_chusheng"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"

        >
        <ImageView


            android:src="@drawable/bitian"
            android:layout_width="8dip"
            android:layout_height="8dip" />

        <TextView
            android:layout_marginLeft="2dip"
            android:textColor="#191616"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white"
            android:text="死亡日期:"
            android:textSize="15sp" />

        <TextView

            android:textColor="#818181"
            android:id="@+id/tv_death"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="请选择死亡日期"
            android:inputType="textEmailAddress"
            android:maxLength="40"
            android:textSize="14sp" />


    </LinearLayout>



</RelativeLayout>

