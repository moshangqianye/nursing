<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/activity_intelligent_honour_agreement_remind_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/sv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    layout="@layout/layout_image_text_rightalignednumber_horizontal"
                    android:id="@+id/lay_latest_7_days_need_execute_projects_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6" />

                <include
                    layout="@layout/layout_image_text_rightalignednumber_horizontal"
                    android:id="@+id/lay_timeout_not_execute_projects_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6" />

                <include
                    layout="@layout/layout_image_toprightnumber_text_horizontal"
                    android:id="@+id/lay_new_service_assess_info_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6" />

                <include
                    layout="@layout/layout_image_toprightnumber_text_horizontal"
                    android:id="@+id/lay_new_sign_application_info_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6" />

            </LinearLayout>

        </ScrollView>

        <include
            layout="@layout/layout_load_failure_placeholder_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lay_get_remind_number_load_failure"
            android:visibility="gone" />

    </FrameLayout>
</LinearLayout>