<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/execution_project_background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_18dp"
        android:layout_marginBottom="@dimen/margin_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/item_execution_projects_content_margin_top"
            android:background="@drawable/white_background_with_round_corner"
            android:orientation="vertical"
            android:paddingTop="@dimen/item_execution_projects_content_padding_top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="@dimen/img_width_normal"
                    android:layout_height="@dimen/img_height_normal"
                    android:scaleType="fitXY"
                    android:src="@mipmap/person" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/list_item_main_text_color"
                            android:textSize="@dimen/txt_size_14" />

                        <TextView
                            android:id="@+id/tv_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/list_item_main_text_color"
                            android:textSize="@dimen/txt_size_14" />


                        <!--<signed_resident_clientnt.view.RectanglePercentageView-->
                        <!--android:id="@+id/rpv_ratio"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="@dimen/rectangle_percentage_height"-->
                        <!--android:layout_marginLeft="@dimen/margin_small"-->
                        <!--android:layout_weight="1" />-->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_package_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/package_name_color"
                            android:textSize="@dimen/txt_size_14" />

                        <TextView
                            android:id="@+id/tv_package_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_size_xsmall" />

                    </LinearLayout>


                </LinearLayout>

                <com.jqsoft.nursing.view.DonutProgressView
                    android:id="@+id/dpv_progress"
                    android:layout_width="@dimen/donut_progress_view_width"
                    android:layout_height="@dimen/donut_progress_view_height"
                    android:layout_marginLeft="@dimen/margin_normal"
                    app:donut_progress_backgroundColor="@android:color/transparent"
                    app:donut_progress_backgroundDonutColor="@color/donut_not_filled"
                    app:donut_progress_percentage="0.6"
                    app:donut_progress_percentageDonutColor="@color/colorTheme"
                    app:donut_progress_width="4dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_projects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"></LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_dial"
            android:layout_width="@dimen/img_width_large"
            android:layout_height="@dimen/img_height_large"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/item_execution_projects_dial_padding_top"
            android:scaleType="fitXY"
            android:src="@mipmap/r_dial" />


    </RelativeLayout>



</LinearLayout>


