<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/leba_bg_layout"
    >
    <LinearLayout
        style="@style/leba_bg_top_layout"
        android:orientation="vertical"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        >

        <LinearLayout
            android:layout_height="30dip"
            style="@style/ll_bg_mid_layout"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_weight="1.4"
                android:text="****"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/txt_size_14" />

            <TextView

                android:id="@+id/tv_relation"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_weight="6"

                android:text="***"
                android:textColor="#191616"
                android:textSize="@dimen/txt_size_14" />


        </LinearLayout>

        <View
            android:layout_marginTop="5dip"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@drawable/leba_shape_line" />


        <LinearLayout

            style="@style/ll_bg_mid_layout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_weight="1.4"
                android:text="身份证号"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/txt_size_14" />

            <TextView
                android:layout_gravity="left"
                android:id="@+id/tv_idcard"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_weight="6"

                android:text="******************"
                android:textColor="#191616"
                android:textSize="@dimen/txt_size_14" />
        </LinearLayout>

        <LinearLayout
            style="@style/ll_bg_mid_layout"
            android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:text="性别:"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/txt_size_14" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"

                android:text="***"
                android:textColor="#191616"
                android:textSize="@dimen/txt_size_14" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:text="出生日期:"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/txt_size_14" />
            <TextView
                android:id="@+id/tv_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:text="************"
                android:textColor="#191616"
                android:textSize="@dimen/txt_size_14" />

        </LinearLayout>

        <View
            android:layout_marginTop="5dip"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@drawable/leba_shape_line" />

    </LinearLayout>
        <RelativeLayout
            android:layout_height="35dip"
            style="@style/leba_bg_bottom_layout"
            android:id="@+id/title_manageinfo"
            >


            <Button
                android:gravity="center"
                android:textSize="@dimen/txt_size_14"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_bianji"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="80dp"
                android:textColor="#62A9E7"
                android:background="@drawable/circle_corner_button_selector"
                android:text="编辑" />

            <Button
                android:gravity="center"
                android:textSize="@dimen/txt_size_14"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_del"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:textColor="#62A9E7"
                android:background="@drawable/circle_corner_button_selector"
                android:text="删除" />
        </RelativeLayout>




</LinearLayout>