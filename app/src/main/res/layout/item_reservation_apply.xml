<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#eeeeee"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_first"
                style="@style/leba_bg_layout"  >

                <LinearLayout
                    style="@style/leba_bg_top_layout"
                    android:id="@+id/ll_top"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_head"
                        android:layout_marginLeft="5dip"
                        android:layout_width="50dip"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:src="@mipmap/person">
                    </ImageView>

                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_width="0dip"
                        android:layout_height="50dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dip"
                        >

                        <LinearLayout
                            android:id="@+id/ll_name"
                            android:layout_width="match_parent"
                            android:layout_height="20dip"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_applyname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/txt_size_15"
                                android:text="***"
                                android:textColor="#191616"
                                />
                            <ImageView
                                android:id="@+id/iv_applysex"
                                android:layout_marginLeft="5dip"
                                android:src="@mipmap/i_male"
                                android:layout_width="16dip"
                                android:layout_height="16dip" />

                            <TextView
                                android:id="@+id/tv_applyage"
                                android:layout_marginLeft="5dip"
                                android:layout_width="50dip"
                                android:layout_height="wrap_content"
                                android:text="**岁"
                                android:textColor="#191616"
                                android:textSize="@dimen/txt_size_15"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_label"
                            android:layout_below="@+id/ll_name"
                            android:layout_width="match_parent"
                            android:layout_height="20dip"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >

                            <ImageView
                                android:id="@+id/iv_tang"
                                android:layout_width="16dip"
                                android:layout_height="16dip"
                                android:visibility="gone"
                                />

                            <ImageView
                                android:id="@+id/iv_gao"
                                android:layout_marginLeft="5dip"
                                android:layout_width="16dip"
                                android:layout_height="16dip"
                                android:visibility="gone"
                                />
                            <ImageView
                                android:id="@+id/iv_lao"
                                android:layout_marginLeft="5dip"
                                android:layout_width="16dip"
                                android:layout_height="16dip"
                                android:visibility="gone"
                                />
                            <ImageView
                                android:id="@+id/iv_jing"
                                android:layout_marginLeft="5dip"
                                android:layout_width="16dip"
                                android:layout_height="16dip"
                                android:visibility="gone"
                                />
                            <ImageView
                                android:id="@+id/iv_mian"
                                android:layout_marginLeft="5dip"
                                android:layout_width="16dip"
                                android:layout_height="16dip"
                                android:visibility="gone"
                                />
                            <ImageView
                                android:id="@+id/iv_pin"
                                android:layout_marginLeft="5dip"
                                android:layout_width="16dip"
                                android:layout_height="16dip"
                                android:visibility="gone"
                                />
                            <ImageView
                                android:id="@+id/iv_tong"
                                android:layout_marginLeft="5dip"
                                android:layout_width="16dip"
                                android:layout_height="16dip"
                                android:visibility="gone"
                                />
                            <ImageView
                                android:id="@+id/iv_tuo"
                                android:layout_marginLeft="5dip"
                                android:layout_width="16dip"
                                android:layout_height="16dip"
                                android:visibility="gone"
                                />
                            <ImageView
                                android:id="@+id/iv_yun"
                                android:layout_marginLeft="5dip"
                                android:layout_width="16dip"
                                android:layout_height="16dip"
                                android:visibility="gone"
                                />
                        </LinearLayout>


                    </LinearLayout>
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dip"
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_applyphone"
                        android:layout_width="48dip"
                        android:layout_height="48dip"
                        android:src="@mipmap/i_assess_dial">
                    </ImageView>



                </LinearLayout>

                <View
                    android:id="@+id/view_top"
                    android:layout_below="@+id/ll_top"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@drawable/leba_shape_line" />

                <LinearLayout
                    android:id="@+id/ll_data"
                    style="@style/leba_bg_mid_layout"
                    android:layout_below="@+id/view_top"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/ll_idcard"
                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:text="身份证号"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14"/>
                        <TextView
                            android:id="@+id/tv_applycard"
                            android:layout_marginRight="12dip"
                            android:gravity="right"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            android:text="3412211991081*****"
                            android:textColor="#191616"
                            android:textSize="@dimen/txt_size_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_dossier"
                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:text="档案号"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14" />
                        <TextView
                            android:id="@+id/tv_filename"
                            android:layout_marginRight="12dip"
                            android:gravity="right"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            android:text="341221111145522855"
                            android:textColor="#191616"
                            android:textSize="@dimen/txt_size_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_doctor"
                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:text="家庭住址"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14" />
                        <TextView
                            android:id="@+id/tv_applyadrress"
                            android:layout_marginRight="12dip"
                            android:gravity="right"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            android:text="某某街道88号"
                            android:textColor="#191616"
                            android:textSize="@dimen/txt_size_14" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view_middle"
                    android:layout_below="@+id/ll_data"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@drawable/leba_shape_line" />

                <LinearLayout

                    style="@style/leba_bg_bottom_layout"
                    android:layout_below="@+id/view_middle"
                    android:orientation="vertical"
                    >

                    <LinearLayout

                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:text="服务包名称"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14" />
                        <TextView
                            android:id="@+id/tv_applypackname"
                            android:layout_marginRight="12dip"
                            android:gravity="right"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            android:text="高血压中级包"
                            android:textColor="#191616"
                            android:textSize="@dimen/txt_size_14" />
                    </LinearLayout>

                    <LinearLayout

                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:text="服务项目"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14" />
                        <TextView
                            android:id="@+id/tv_applyservername"
                            android:layout_marginRight="12dip"
                            android:gravity="right"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            android:text="肝功能"
                            android:textColor="#191616"
                            android:textSize="@dimen/txt_size_14" />
                    </LinearLayout>

                    <LinearLayout

                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:text="服务预约日期"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_14"/>
                        <TextView
                            android:id="@+id/tv_applydate"
                            android:layout_marginRight="12dip"
                            android:gravity="right"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="6"
                            android:text="2017-05-01"
                            android:textColor="#191616"
                            android:textSize="@dimen/txt_size_14" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_below="@+id/ll_first"
                style="@style/leba_bg_layout" >

                <LinearLayout
                    android:id="@+id/ll_nursingView"
                    style="@style/leba_bg_top_layout"
                    android:orientation="horizontal" >


                    <TextView
                        android:layout_marginTop="5dip"
                        android:layout_gravity="top"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12.0dip"
                        android:layout_weight="2"
                        android:text="服务地点"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="@dimen/txt_size_14" />




                    <LinearLayout
                        android:background="#fff"
                        android:orientation="vertical"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dip"
                        android:layout_weight="6">

                        <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioGroup
                            android:id="@+id/rg_adress1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioButton
                                android:id="@+id/rb_adress1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#818181"
                                android:textSize="@dimen/txt_size_14"

                                android:text="上门" />

                            <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioButton
                                android:id="@+id/rb_adress2"
                                android:layout_marginLeft="8dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/txt_size_14"
                                android:textColor="#818181"
                                android:text="村室" />

                            <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioButton
                                android:id="@+id/rb_adress3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dip"
                                android:textColor="#818181"
                                android:textSize="@dimen/txt_size_14"
                                android:text="乡镇卫生院" />

                        </com.mixiaoxiao.smoothcompoundbutton.SmoothRadioGroup>

                        <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioGroup
                            android:id="@+id/rg_adress2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.mixiaoxiao.smoothcompoundbutton.SmoothRadioButton
                                android:id="@+id/rb_adress4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/txt_size_14"
                                android:textColor="#818181"
                                android:text="其他" />

                            <EditText
                                android:visibility="gone"
                                android:textColor="#818181"
                                android:textSize="@dimen/txt_size_14"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="12dip"
                                android:id="@+id/et_execu_addressother"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:layout_weight="2.5"
                                android:background="@drawable/gray_border_gray_background"
                                />

                        </com.mixiaoxiao.smoothcompoundbutton.SmoothRadioGroup>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@drawable/leba_shape_line" />

                <LinearLayout
                    style="@style/leba_bg_bottom_layout"
                    android:orientation="vertical" >

                    <LinearLayout
                        style="@style/ll_bg_mid_layout"
                        android:orientation="horizontal" >
                        <TextView

                            android:id="@+id/tv_execuserver"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:text="执行服务"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="@dimen/txt_size_normal" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#D7D7D7"
                            android:layout_gravity="center_horizontal"
                            />

                        <TextView
                            android:id="@+id/tv_delete"
                            android:layout_marginRight="12dip"
                            android:gravity="center"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dip"
                            android:layout_weight="1"
                            android:text="取消申请"
                            android:textColor="#191616"
                            android:textSize="@dimen/txt_size_normal" />
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>